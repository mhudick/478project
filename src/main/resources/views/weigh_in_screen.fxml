<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>

<?import util.NumFieldFx?>
<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml">
    <VBox alignment="TOP_CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
        <children>
            <Label text="Let's Weigh-In!">
                <font>
                    <Font size="32.0" />
                </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="50.0" spacing="15.0">
                <children>
                    <Label text="Today's Date:">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label text="dateTarget">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                </children>
            </HBox>
            <Label text="Enter Weight" />
            <HBox alignment="BOTTOM_CENTER" spacing="10.0">
                <children>
                    <NumFieldFx fx:id="weightField"/>
                    <Label text="Lbs." />
                </children>
                <padding>
                    <Insets left="20.0" />
                </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
                <children>
                    <Button prefWidth="80.0" text="Cancel" onAction="#handleCancelButton"/>
                    <Button prefWidth="80.0" text="Set Weight" onAction="#handleWeighInButton"/>
                </children>
            </HBox>
        </children>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
    </VBox>
</fx:root>