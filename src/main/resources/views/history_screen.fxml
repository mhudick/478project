<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml">
    <VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
        <children>
            <Label text="Weigh In History">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
            <TableView fx:id="weighInTable" prefHeight="200.0" prefWidth="200.0">
                <columns>
                    <TableColumn fx:id="wDate" prefWidth="177.0" text="Date" />
                    <TableColumn fx:id="wWeight" prefWidth="182.0" text="Weight" />
                </columns>
            </TableView>
            <HBox alignment="CENTER_RIGHT">
                <children>
                    <Button text="Delete" onAction="#handleDeleteWeightButton"/>
                </children>
            </HBox>
            <Label text="Daily History">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
            <TableView fx:id="dayTable" prefHeight="200.0" prefWidth="200.0">
                <columns>
                    <TableColumn fx:id="dDate" prefWidth="175.0" text="Date" />
                    <TableColumn fx:id="dCal" prefWidth="184.0" text="Total Calories" />
                </columns>
            </TableView>
            <HBox alignment="CENTER_RIGHT">
                <children>
                    <Label fx:id="messageLabel">
                        <HBox.margin>
                            <Insets right="150.0" />
                        </HBox.margin>
                    </Label>
                    <Button text="Delete" onAction="#handleDeleteDayButton"/>
                </children>
            </HBox>
        </children>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
    </VBox>
</fx:root>


