<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml">
    <VBox alignment="CENTER_LEFT"  spacing="10.0">
        <children>
            <Label fx:id="nameLabel" text="Name Target">
                <font>
                    <Font size="24.0" />
                </font>
                <padding>
                    <Insets top="20.0" />
                </padding>
            </Label>
            <Label text="Weight Goals">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
            <GridPane hgap="12.0" vgap="12.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" />
                    <ColumnConstraints hgrow="SOMETIMES" />
                    <ColumnConstraints hgrow="SOMETIMES" />
                    <ColumnConstraints hgrow="SOMETIMES" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <Label text="Goal Weight" />
                    <Label GridPane.columnIndex="2" />
                    <Label text="Total Progress" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                    <Label text="Starting Weight" GridPane.columnIndex="2" />
                    <Label text="Current Weight" GridPane.rowIndex="1" />
                    <Label text="Label" GridPane.columnIndex="1" />
                    <Label text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label text="Label" GridPane.columnIndex="3" />
                    <Label text="Label" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                </children>
            </GridPane>
            <Label text="Current Goals">
                <font>
                    <Font size="18.0" />
                </font>
                <padding>
                    <Insets top="20.0" />
                </padding>
            </Label>
            <GridPane hgap="12.0" vgap="12.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" />
                    <ColumnConstraints hgrow="SOMETIMES" />
                    <ColumnConstraints hgrow="SOMETIMES" />
                    <ColumnConstraints hgrow="SOMETIMES" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <Label text="Weekly target:" GridPane.columnIndex="2" />
                    <Label text="Weekly Progress" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                    <Label text="Daily Goal" />
                    <Label text="Daily Total" GridPane.rowIndex="1" />
                    <Label text="Label" GridPane.columnIndex="1" />
                    <Label text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label text="Label" GridPane.columnIndex="3" />
                    <Label text="Label" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                </children>
            </GridPane>
            <HBox alignment="BOTTOM_RIGHT" prefHeight="60.0">
                <children>
                    <Button fx:id="editButton" text="Edit Profile" onAction="#handleEditButton"/>
                </children>
            </HBox>
        </children>
        <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
        </padding>
    </VBox>
</fx:root>


