<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.HomeScreen">
    <children>
        <HBox spacing="12.0">
            <children>
                <TextField fx:id="searchTextField" />
                <Button mnemonicParsing="false" text="Search" fx:id="searchButton"
                        onAction="#handleSearchButton"/>
                <ChoiceBox prefWidth="150.0" fx:id="menuChoiceBox"
                           onAction="#handleMenuChoiceBox" />
            </children>
            <padding>
                <Insets bottom="4.0" left="12.0" right="12.0" top="12.0" />
            </padding>
        </HBox>
        <StackPane fx:id="contentStackPane"/>
    </children>
</VBox>

