<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml">
    <VBox alignment="CENTER"  spacing="30.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
        <children>
            <HBox alignment="CENTER" spacing="8.0">
                <children>
                    <Label text="Name: ">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <Label fx:id="nameLabel" text="NameTarg">
                        <font>
                            <Font size="18.0" />
                        </font>
                        <HBox.margin>
                            <Insets right="20.0" />
                        </HBox.margin>
                    </Label>
                    <Label text="Date:">
                        <font>
                            <Font size="18.0" />
                        </font>
                        <HBox.margin>
                            <Insets left="20.0" />
                        </HBox.margin>
                    </Label>
                    <Label fx:id="dateLabel" text="DateTarg">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                </children>
            </HBox>
            <GridPane hgap="16.0" vgap="8.0">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <Label text="Current weight:" GridPane.rowIndex="3">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <Label text="Starting Weight:" GridPane.rowIndex="1">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <Label text="Goal Weight:" GridPane.rowIndex="2">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <Label fx:id="currentLabel" text="CWTarg" GridPane.columnIndex="1" GridPane.rowIndex="3">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label fx:id="goalLabel" text="GWTarg" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label fx:id="startLabel" text="SWTarg" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                        <children>
                            <Label text="Weight Goals">
                                <font>
                                    <Font size="18.0" />
                                </font>
                            </Label>
                        </children>
                        <opaqueInsets>
                            <Insets />
                        </opaqueInsets>
                    </HBox>
                    <HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
                        <children>
                            <Button text="Edit Profile" onAction="#handleEditButton"/>
                        </children>
                    </HBox>
                    <HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="5">
                        <children>
                            <Button fx:id="weighButton" text="Lets Weigh In" onAction="#handleWeighButton"/>
                        </children>
                    </HBox>
                </children>
            </GridPane>
            <GridPane hgap="16.0" vgap="8.0">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <Label text="Today's Total:" GridPane.rowIndex="2">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <Label text="Calories Available:" GridPane.rowIndex="3">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <Label fx:id="limitLabel" text="LimitTarg" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <Label fx:id="totalLabel" text="TotalTarg" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <Label fx:id="availableLabel" text="AvailTarg" GridPane.columnIndex="1" GridPane.rowIndex="3">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                        <children>
                            <Label text="Daily Goals">
                                <font>
                                    <Font size="18.0" />
                                </font>
                            </Label>
                        </children>
                    </HBox>
                    <Label text="Calorie Limit:" GridPane.rowIndex="1">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                        <children>
                            <Button text="Meal Time" onAction="#handleMealButton"/>
                        </children>
                    </HBox>
                </children>
            </GridPane>
        </children>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
    </VBox>
</fx:root>


