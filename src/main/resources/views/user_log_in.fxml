<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.FlowPane?>
<FlowPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="controllers.UserLogin"
          fx:id="flow_login"
          hgap="10"
          vgap="10">

    <ListView fx:id="userListView"/>

     <VBox alignment="CENTER_RIGHT">

         <Button fx:id="newUserButton"
                 text="New"
                 onAction="#handleNewButton"/>

         <Button fx:id="selectUserButton"
                 text="Select"
                 onAction="#selectUserButton"/>

     </VBox>

</FlowPane>